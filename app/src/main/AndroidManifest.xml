<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieTime"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.FilmCreationActivity"
            android:label="@string/FilmActivity"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Activity.GenreCreationActivity"
            android:label="@string/GenreActivity"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Activity.RelationGenreFilmActivity"
            android:label="@string/AddGenreToFilmActivity"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Activity.FilmActivity"
            android:label="@string/FilmActivity"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Activity.GenreActivity"
            android:label="@string/GenreActivity"
            tools:ignore="MissingClass" />
    </application>

</manifest>